ENV=production
API_VERSION=v1
API_PREFIX=/api

# ===========================================
# üå± GREEN COMPUTING SETTINGS
# ===========================================
CARBON_TRACKING_ENABLED=true
PERFORMANCE_MONITORING=true
ENABLE_COMPRESSION=true
ENABLE_CACHING=true

# ===========================================
# üåê FRONTEND URLS
# ===========================================
FRONTEND_AUTH_URL=https://mubaroqadb.github.io/agenticlearn-auth
FRONTEND_STUDENT_URL=https://mubaroqadb.github.io/agenticlearn-student
FRONTEND_EDUCATOR_URL=https://mubaroqadb.github.io/agenticlearn-educator
